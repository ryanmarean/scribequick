@using ScribeQuick.Models
@model User

@{
  ViewData["Title"] = "Characters";
  ViewData["Header"] = "Welcome, " + Model.FirstName + "!";
}

<div class="container">
  <h1 class="display-4">Your Characters</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Level</th>
        <th>Role</th>
        <th>Deity</th>
        <th>Total XP</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var character in Model.CreatedCharacters)
      {
          <tr>
            <td>@character.Name</td>
            <td>@character.Level</td>
            <td>@character.Role.Name</td>
            <td>@character.Deity.Name</td>
            <td>@character.GainedXP</td>
            <td><a href="" class="btn btn-danger">Delete</a></td>
          </tr>
      }
    </tbody>
  </table>
  <div class="row justify-content-end">
    <a asp-controller="Home" asp-action="CharacterCreation" class="col-3 btn btn-info">New Character</a>
  </div>
</div>